<%= link_to 'New article', new_article_path %>

<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, :controller => "articles", :action => "show", :id => article %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
</table>